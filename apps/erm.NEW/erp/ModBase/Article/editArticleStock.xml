<!--
Example for an XML file describing a screen

Note:
All Ids will be automatically assigned is not given. Manual assignment is only needed in case
the node must be looked up, as it's for example sometimes needed to locate a tab in a tab container
 -->
<html
        xmlns="http://www.w3.org/1999/xhtml"
        xmlns:wap="http://www.openwap.org/wap">
    <div>
        <wap:wapDialog data-wap-module="ModBase" data-wap-screen="ArticleStock" data-wap-core-object="ArticleStock" data-wap-core-object-key="Id" data-wap-parent-object="Article" w="300" h="300">
            <wap:key>
                <wap:keyform id="ArticleStockKeyData">
                    <wap:keyrow data-wap-label="Id" data-wap-obj="ArticleStock" data-wap-attr="Id" data-wap-prev="true" data-wap-next="true" />
                </wap:keyform>
            </wap:key>
            <wap:data>
                <wap:dataform id="formArticleStock" class="formCreate formUpdate" w="500" h="400">
                    <table>
					<wap:rowdisplay data-wap-label="Id" data-wap-attr="Id" />
					<wap:rowdisplay data-wap-label="Article no." data-wap-attr="ArticleNo" />
					<wap:rowdisplay data-wap-label="Rev. code" data-wap-attr="RevCode" />
					<wap:rowdisplay data-wap-label="Variant no." data-wap-attr="ArticleVariantNo" />
					<wap:rowinput data-wap-label="Warehouse Id" data-wap-attr="WarehouseId" />
					<wap:rowinput data-wap-label="Stock Id" data-wap-attr="StockId" />
					<wap:rowinput data-wap-label="Shelf Id" data-wap-attr="ShelfId" />
					<wap:rowinput data-wap-label="Location" data-wap-attr="Location" />
					<wap:rowflag data-wap-label="Default" data-wap-attr="Default"
						data-wap-db="Option" data-wap-key="Key" data-wap-value="Value" data-wap-cond="OptionName = 'Flag'" data-wap-order="Value" data-wap-def="" />
					<wap:rowinput data-wap-label="Stock Qty." data-wap-attr="Stock" />
					<wap:rowinput data-wap-label="Reserved Qty." data-wap-attr="Reserved" />
					<wap:rowinput data-wap-label="Picked Qty." data-wap-attr="Picked" />
					<wap:rowinput data-wap-label="Ordered Qty." data-wap-attr="Ordered" />
					<wap:rowinput data-wap-label="Minimum Qty." data-wap-attr="Minimum" />
                    </table>
                </wap:dataform>
            </wap:data>
        </wap:wapDialog>
    </div>
</html>
