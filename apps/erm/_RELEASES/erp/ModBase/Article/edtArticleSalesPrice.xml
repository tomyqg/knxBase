<!--
Example for an XML file describing a screen

Note:
All Ids will be automatically assigned is not given. Manual assignment is only needed in case
the node must be looked up, as it's for example sometimes needed to locate a tab in a tab container
 -->
<html
	xmlns="http://www.w3.org/1999/xhtml"
	xmlns:wap="http://www.openwap.org/wap">
	<div id="edtArticleSalesPrice" class="wapForm">
		<h2 class="page-title">Article Sales Price</h2>
		<wap:data>
			<fieldset>
				<legend>Editor: Article Sales Price</legend>
				<wap:dataform id="edtArticleSalesPriceMain">
					<wap:rowdisplay data-wap-label="Id" data-wap-attr="Id" />
					<wap:rowdisplay data-wap-label="Article no." data-wap-attr="ArticleNo" />
					<wap:rowdisplay data-wap-label="Rev. code" data-wap-attr="RevCode" />
					<wap:rowdisplay data-wap-label="Variant no." data-wap-attr="ArticleVariantNo" />
					<wap:rowoption data-wap-label="Market id." data-wap-attr="MarketId"
						data-wap-db="Market" data-wap-key="MarketId" data-wap-value="Description" data-wap-cond="1 = 1" data-wap-order="MarketId" data-wap-def="default" />
					<wap:rowoption data-wap-label="Price type" data-wap-attr="PriceType"
						data-wap-db="Option" data-wap-key="Key" data-wap-value="Value" data-wap-cond="OptionName = 'PriceType'" data-wap-order="Value" data-wap-def="default" />
					<wap:rowinput data-wap-label="Quantity" data-wap-attr="Quantity" />
					<wap:rowinput data-wap-label="Quantity per PU" data-wap-attr="QuantityPerPU" />
					<wap:rowinput data-wap-label="Valid from" data-wap-attr="ValidFrom" />
					<wap:rowinput data-wap-label="Valid until" data-wap-attr="ValidUntil" />
					<wap:rowinput data-wap-label="Price" data-wap-attr="Price" />
					<wap:rowoption data-wap-label="Currency" data-wap-attr="Currency"
						data-wap-db="Option" data-wap-key="Key" data-wap-value="Value" data-wap-cond="OptionName = 'Currency'" data-wap-order="Value" data-wap-def="default" />
					<wap:rowinput data-wap-label="Reference supplier" data-wap-attr="ReferenceSupplierNo" />
				</wap:dataform>
			</fieldset>
		</wap:data>
	</div>
</html>
