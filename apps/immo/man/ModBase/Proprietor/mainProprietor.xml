                				</wap:dtvst>
                			</dojo:lcp>
                			<dojo:lcp title="Reminders">
                			</dojo:lcp>
                		</dojo:ltc>
        -->
                	</wap:tabContentPane>
                        <wap:tabContentPane id="tabPageProprietorHelp" data-wap-heading="Help">
				<wap:tabContainer id="tabCntrlProprietorHelpMain">
					<wap:tabContentPane id="tabPageProprietorHelpDE" data-wap-heading="Deutsch">
						Deutsch Hilfe.
					</wap:tabContentPane>
					<wap:tabContentPane id="tabPageProprietorHelpEN" data-wap-heading="English">
						English help.
					</wap:tabContentPane>
					<wap:tabContentPane id="tabPageProprietorHelpFR" data-wap-heading="Francais">
						Aide francais.
					</wap:tabContentPane>
				</wap:tabContainer>
			</wap:tabContentPane>
		</wap:tabContainer>
	</wap:wapScreen>
</html>
